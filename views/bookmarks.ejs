<%- include('partials/logged-in') -%>
<div class="container card-container">
 <h1>My Bookmarked Stores</h1>
 <% console.log(posts[0]) %> 
 <div class="row row-cols-1 row-cols-md-3 g-4">
   <% for(var i=0; i<posts.length; i++) {%>
     <%if(posts[i].bookmarks.includes(user.id)) {%>
   <div class="col">
     <div class="card">
       <img src="<%= posts[i].image%>" class="" alt="...">
       <div class="card-body">
         <h5 class="card-title"><%= posts[i].title%></h5>
         <p class="card-text"><%= posts[i].caption %>.</p>
         <a href="/post/<%= posts[i]._id%>" class="btn btn-primary">View Store</a>
         <!-- <a href="/post/<%= posts[i]._id%>" class="btn btn-primary">Edit</a> -->
       </div>
       <div class="card-footer">
         <span class="badge rounded-pill bg-primary"><%= posts[i].industry%></span>
         
       </div>
     </div>
   </div>
   <% } %>
   <% } %>
 </div>
 
</div>